{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Carbo Markdown Editor",
    "version": "1.0.0",
    "identifier": "com.carbo.markdown",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:3000",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Carbo - Markdown 编辑器",
                "width": 1200,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "dragDropEnabled": true
            }
        ],
        "security": {
            "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost https://asset.localhost https://raw.githubusercontent.com data: blob:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'",
            "assetProtocol": {
                "enable": true,
                "scope": ["$APPDATA/carbo-assets/images/**"]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/icon.ico"
        ]
    }
}
